@model BuscoBicoFrontEnd.Models.ClienteModel
@{
    ViewData["Title"] = "Detalhes do Cliente";
}
<h1>@ViewData["Title"]</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Telefone:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            Localização:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localizacao)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar Cliente", "EditarCliente", new { id = Model.Id }) |
    @Html.ActionLink("Deletar Cliente", "DeletarCliente", new { id = Model.Id }) |
    
    <a asp-action="ListarCliente">Voltar para a lista</a>
</div>
