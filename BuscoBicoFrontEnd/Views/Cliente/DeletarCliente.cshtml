@model BuscoBicoFrontEnd.Models.ClienteModel
@{
    ViewData["Title"] = "Deletar Cliente";
}
<h1>@ViewData["Title"]</h1>
<h3>O seguinte Cliente será removido, deseja continuar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Telefone:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            Localização:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localizacao)
        </dd>
    </dl>
    
    <form asp-action="DeletarCliente">
        <hr />
        <input type="submit" value="Deletar Cliente" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="ListarCliente">Voltar para a lista</a>
    </form>
</div>
