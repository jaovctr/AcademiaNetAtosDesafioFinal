@model BuscoBicoFrontEnd.Models.ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <h6 class="text-dark">
            Editando Cliente @Html.DisplayFor(model => model.Nome) com Id @Html.DisplayFor(model => model.Id)
        </h6>
        <form asp-action="EditarCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" type="tel"/>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label">Localização</label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br>
                <input type="submit" value="Salvar Alterações" class="btn btn-outline-dark" />
                <a class="btn btn-outline-dark" asp-action="ListarCliente">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
