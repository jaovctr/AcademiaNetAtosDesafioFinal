@model BuscoBicoFrontEnd.Models.PrestadorModel
@{
    ViewData["Title"] = "Detalhes do Prestador";
}
<h1>@ViewData["Title"]</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Telefone:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            E-mail:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Localização:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localizacao)
        </dd>
        <dt class = "col-sm-2">
            Função:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Funcao)
        </dd>
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Valor da diária:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoDiaria)
        </dd>
    </dl>
</div>
<div>
    <hr/>
    @Html.ActionLink("Editar Prestador", "EditarPrestador", new{ id = Model.Id }) |
    @Html.ActionLink("Deletar", "DeletarPrestador", new{ id = Model.Id }) |
    <a asp-action="ListarPrestador">Voltar para a lista</a>

    
</div>
