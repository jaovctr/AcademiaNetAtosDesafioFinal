@model BuscoBicoFrontEnd.Models.PrestadorModel
@{
    ViewData["Title"] = "Deletar Prestador";
}
<h1>@ViewData["Title"]</h1>
<h3>O seguinte Prestador será removido, deseja continuar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Telefone:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            E-mail:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Localização:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localizacao)
        </dd>
        <dt class = "col-sm-2">
            Função:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Funcao)
        </dd>
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Valor da diária:
        </dt>
        <dd class = "col-sm-10">
            R$: @Html.DisplayFor(model => model.PrecoDiaria),00
        </dd>
    </dl>
    
    <form asp-action="DeletarPrestador">
        <hr />
        <input type="submit" value="Deletar Prestador" class="btn btn-danger" /> 
        <a class="btn btn-secondary" asp-action="ListarPrestador">Voltar para a lista</a>
    </form>
</div>
